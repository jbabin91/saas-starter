{
  "name": "saas-boilerplate",
  "version": "0.1.0",
  "private": true,
  "author": "jbabin91 (https://github.com/jbabin91)",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "lint": "eslint . --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "prepare": "is-ci || husky",
    "start": "next start",
    "typecheck": "tsc --noEmit --pretty"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./.commitlintrc.cjs"
    }
  },
  "dependencies": {
    "next": "14.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.4",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "autoprefixer": "^10.4.19",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.4",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.14",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3"
  }
}
